<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<ImageView
			android:layout_width="match_parent"
			android:layout_height="200dp"
			android:id="@+id/imageContent"
			android:src="@drawable/mario"
			android:scaleType="centerCrop"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_margin="1px"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:text="New Text"
			android:id="@+id/textDesc"
			android:gravity="left|center_vertical"
			android:singleLine="true"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_toLeftOf="@+id/buttonShare"/>
	<Button
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:text="Share"
			android:id="@+id/buttonShare"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"/>
	<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:background="#99888888"
			android:layout_above="@+id/textDesc"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="New Text"
			android:id="@+id/textContent"
			android:layout_below="@+id/imageContent"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_above="@+id/textDesc"
			android:layout_alignRight="@+id/buttonShare"
			android:layout_alignEnd="@+id/buttonShare"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/imagePositive"
			android:src="@drawable/ic_launcher"
			android:layout_alignTop="@+id/imageContent"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"/>
	<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/imageNegtive"
			android:src="@drawable/ic_launcher"
			android:layout_alignTop="@+id/imageContent"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"/>


</RelativeLayout>